//Write a program that asks the user to enter his or her name. The program should respond with a message that
//says hello to the user, using his or her name.
   
#include<iostream>
using namespace std;

int main()
{
  
  string name;
  cout<<"Enter yoor name"<<endl;
  cin>>name;
  cout<<"Hello, "<<name<<"!"<<endl;
}

