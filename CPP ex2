//Create a program that reads a duration from the user as a number of days, hours, minutes, and
//seconds. Compute and display the total number of seconds represented by this duration.

#include<iostream>
using namespace std;

int main()
{

    int day,hour,min,sec;
    cout<<"Enter number day :"<<endl;
    cin>>day;
    cout<<"Enter number hour :"<<endl;
    cin>>hour;
    cout<<"Enter number minutes :"<<endl;
    cin>>min;
    cout<<"Enter number seconds :"<<endl;
    cin>>sec;

    cout<<"Total no of seconds are :"<< (day*60*60*24)+(hour*60*60)+(min*60)+sec;

}
