using System;
					
public class Program
{
	public static void Main()
	{
	//Profram that shows if a number is even of odd


	int no;
	string val;
    Console.WriteLine("Enter a number:");
    val=Console.ReadLine();
	no=Convert.ToInt32(val);

    if(no%2==0){
        Console.WriteLine("The no you entered is even");
    }
    else{
        Console.WriteLine("The no you entered is odd");
    }

	}
}
