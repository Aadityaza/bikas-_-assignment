//Write a program to read student id and score and then calculate grade based on score. Based on the
//score the grade must be calculated.
#include<iostream>
using namespace std;
int main()
{
int marks;

cout<<"Enter marks out of 100: ";
cin>>marks;

if(marks>=85 && marks<=100)
{
cout<<"Your grade will be: HD"<<endl;
}
else if(marks>=75 && marks<85)
{
cout<<"Your grade will be: D"<<endl;
}
else if(marks>=65 && marks<75)
{
cout<<"Your grade will be: CR"<<endl;
}
else if(marks>=50 && marks<65)
{
cout<<"Your grade will be: P"<<endl;
}
else if(marks>=0 && marks<50)
{
cout<<"Your grade will be: F"<<endl;
}

else
{
cout<<"Please enter marks between 0-100"<<endl;
}
return 0;
}
