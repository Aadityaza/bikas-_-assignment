//Write a program to read student id and score and then calculate grade based on score. Based on the
//score the grade must be calculated.
#include<iostream>
using namespace std;
int main()
{
int a,b,c;

cout<<"Enter marks any three number: ";
cin>>a>>b>>c;

int ma=max(c,max(a,b));
int mi=min(c,min(a,b));
cout<<"max value is :"<<ma<<endl;
cout<<"min value is :"<<mi<<endl;

return 0;
